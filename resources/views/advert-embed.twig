<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
      body {
        margin: 0;
        padding: 0;
        background: #ededed;
      }
      [rel="advert"] {
        text-align: center;
        width: 100%;
      }

      .mobile-only { display: inline-block;}
      .tablet-only { display: none;}
      .desktop-only { display: none;}
      @media screen and (min-width: 768px) {
        .mobile-only { display: none;}
        .tablet-only { display: inline-block;}
        .desktop-only { display: none;}
      }
      @media screen and (min-width: 1024px) {
        .mobile-only { display: none;}
        .tablet-only { display: none;}
        .desktop-only { display: inline-block;}
      }
    </style>
  </head>
  <body>

    {% set advert_data = get_advert_data(post, display_type, key_values) %}
    <script>
window.agreableAdvert = {
  network: '{{advert_data.network}}',
  zone: '{{advert_data.zone}}'
}
    </script>

    {{ get_advert_html(post, display_type, key_values) }}

    {{ advert_plugin.js_string | raw }}
  </body>
</html>
